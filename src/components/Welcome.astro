            <span class="font-semibold">Software Developer</span><br><span class="text-xs">@Link Nacional @PoolTile</span>
          </p>

          <div class="flex flex-wrap justify-center gap-1.5">
            {
              PROFILE_PINS.map((pin) => (
                <div class="flex items-center justify-center gap-1 text-sm text-rblue/60 rounded-lg w-fit px-2 py-1 border border-black/5">
                  <Icon name={pin.icon} width={14} height={14} />
                  {pin.label}
                </div>
              ))
            }
          </div>
        </div>

        <div class="w-full flex flex-col gap-2">
          <Button
            text={'See LinkedIn'}
            iconName="mdi:linkedin"
            href="https://www.linkedin.com/in/brunoferreiradc/"
          />

          <Button
            text={'Download Resume'}
            iconName="mdi:download"
            href="/BrunoFerreira_SoftwareEngineer_Resume.pdf"
            hasBg={false}
          />
        </div>
      </Box>
    </div>



    <div class="flex-1 flex flex-wrap gap-5">
      {
        LINKS.map((link) => (
          <Box
            className={[
              'flex-1 flex items-center justify-center text-rblue/60 !p-0 min-w-[100px] min-h-[100px]'
            ]}
            btnOnHover
          >
            <a
              class="size-full p-5 flex flex-col justify-center items-center"
              target="_blank"
              href={link.link}
              title={link.alt}
            >
              <Icon
                name={link.icon}
                class="size-[24px]"
                width={24}
                height={24}
              />
              {link.label && (
                <p class="mt-2 text-xs font-medium text-center">
                  {link.label}
                </p>
              )}
            </a>
          </Box>
        ))
      }
    </div>
  </div>
</div>
