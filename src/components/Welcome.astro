---
import { Icon } from 'astro-icon/components'
import Box from './Box.astro'
import MyMarquee from './MyMarquee'

const LINKS = [
  {
    link: 'https://www.linkedin.com/in/brunoferreiradc',
    icon: 'mdi:linkedin',
    alt: 'LinkedIn Profile'
  },
  {
    link: 'https://github.com/srbrunoferreira',
    icon: 'mdi:github',
    alt: 'GitHub Profile'
  },
  {
    link: 'mailto:srbrunoferreira@outlook.com',
    icon: 'mdi:at',
    label: 'Email Me',
    alt: 'Email Address'
  },
  // {
  // link: '/BrunoFerreira_SoftwareEngineer_Resume.pdf',
  // icon: 'mdi:file-download',
  // label: 'Download CV'
  // },
  {
    link: 'https://wa.me/5581989163234',
    icon: 'mdi:whatsapp',
    label: 'Text Me',
    alt: 'WhatsApp Chat'
  }
]

const SKILLS = [
  'LangChain',
  'LangGraph',
  'LangSmith',
  'Python',
  'LLM',
  'Generative AI',
  'RAG',
  'FAISS',
  'OpenAI',
  'Anthropic',
  'Llama',
  'Mistral',
  'Multi-agent Systems',
  'ReAct',
  'Plan & CoT',
  'Conversational AI',
  'FastAPI',
  'Node.js',
  'TypeScript',
  'Java',
  'Laravel',
  'Next.js',
  'React',
  'Vue 3',
  'Astro',
  'Tailwind CSS',
  'GraphQL',
  'Docker',
  'AWS EC2',
  'GitHub Actions',
  'Nginx',
  'Microservices',
  'PostgreSQL',
  'MongoDB',
  'Redis',
  'DevOps',
  'Cloud Infrastructure',
  'CI/CD Pipelines',
  'API Development'
]

const PROFILE_PINS = [
  {
    label: 'Recife/Brazil',
    icon: 'mdi:location'
  },
  {
    label: 'Portuguese & English',
    icon: 'mdi:language'
  },
  {
    label: 'GMT-3',
    icon: 'mdi:clock-time-two'
  },
  {
    label: 'Computer Science',
    icon: 'mdi:account-school'
  },
  {
    label: 'Uninter',
    icon: 'mdi:academic-cap'
  }
]
---

<div class="mx-auto max-w-[512px] flex flex-col gap-5 p-5 pb-20">
  <Box className={['w-full']} hasBg={false}>
    <h1
      class="text-5xl sm:text-6xl font-bold leading-none text-left w-fit mx-auto flex flex-col"
    >
      Bruno Ferreira
      <br />
      <span class="text-lg font-medium"> Software Developer </span>
    </h1>
  </Box>

  <Box className={['w-full !p-0 !pb-5']} hasBg={false}>
    <h2 class="text-center mb-5 text-xl font-semibold hidden">Skills</h2>

    <MyMarquee client:only="react">
      {
        SKILLS.map((skill) => (
          <div class="h-fit inline mx-1.5 bg-white p-2 rounded-lg text-xs text-black/60">
            {skill}
          </div>
        ))
      }
    </MyMarquee>
  </Box>

  <div class="w-full flex flex-col sm:flex-row gap-5">
    <div class="w-full">
      <Box
        className={[
          'size-full flex flex-col justify-between items-center flex-wrap gap-12'
        ]}
      >
        <div class="flex flex-col justify-between items-center gap-5">
          <div
            class="max-w-[100px] max-h-[100px] size-full rounded-full overflow-hidden"
          >
            <img src="/bruno-ferreira.webp" title="Bruno Ferreira, Software Developer" alt="Profile of Bruno Ferreira - Software Engineer | AI, Full-Stack, Python, PHP, JavaScript, LangChain & DevOps"  width="150" height="150"/>
          </div>

          <div class="flex flex-wrap justify-center gap-1.5">
            {
              PROFILE_PINS.map((pin) => (
                <div class="flex items-center justify-center gap-1 text-sm text-black/60 rounded-lg w-fit px-2 py-1 border border-black/5">
                  <Icon name={pin.icon} width={14} height={14} />
                  {pin.label}
                </div>
              ))
            }
          </div>
        </div>

        <div class="w-full">
          <a
            class="flex items-center justify-center gap-2 border border-black/5 w-full p-2.5 rounded-lg"
            href="/BrunoFerreira_SoftwareEngineer_Resume.pdf"
            target="_blank"
          >
            <Icon name="mdi:file-download" width={14} height={14} />
            <span>Download CV</span>
          </a>
        </div>
      </Box>
    </div>

    <div class="flex-1 flex flex-wrap gap-5">
      {
        LINKS.map((link) => (
          <Box
            className={[
              'flex-1 flex items-center justify-center hover:bg-black/5 !p-0 hover:scale-105 transition-transform duration-75 linear'
            ]}
          >
            <a
              class="size-full p-5 flex flex-col justify-center items-center"
              target="_blank"
              href={link.link}
              title={link.alt}
            >
              <Icon
                name={link.icon}
                class="text-black/70 min-w-[76px]"
                width={32}
                height={32}
              />
              {link.label && (
                <p class="mt-2 text-xs text-black/60 text-center">
                  {link.label}
                </p>
              )}
            </a>
          </Box>
        ))
      }
    </div>
  </div>
</div>
